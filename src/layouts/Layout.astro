---
import "@fontsource-variable/montserrat";
import Navbar from "../components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Homepage for Sarah Delphine Thompson" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
<style>
  body {
    margin: 32px auto;
    max-width: 980px;
    padding: 16px;
  }
</style>
<style is:global>
  @font-face {
    font-family: "Trend Sans W00 Four";
    src: url("/fonts/trend-sans-w00-four.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  h1 {
    font:
      normal normal normal 55px/1.1em "Trend Sans W00 Four",
      sans-serif;
    color: rgb(56, 56, 56);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: clamp(35px, 7vw, 55px);
  }
  h2 {
    font:
      normal normal normal 35px/1.4em "Trend Sans W00 Four",
      sans-serif;
    color: rgb(56, 56, 56);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: clamp(24px, 5vw, 35px);
  }
  body {
    font-family: "Montserrat Variable", sans-serif;
  }
  .youtube-embed {
    max-width: 542px;
    height: auto;
    aspect-ratio: 542/305;
    margin: 0 auto;
    display: block;
  }
</style>
