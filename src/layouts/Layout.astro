---
import "@fontsource-variable/montserrat";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Homepage for Sarah Delphine Thompson" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Trend Sans W00 Four";
    src: url("/fonts/trend-sans-w00-four.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  h1 {
    font:
      normal normal normal 55px/1.1em "Trend Sans W00 Four",
      sans-serif;
    color: rgb(56, 56, 56);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: clamp(35px, 10vw, 55px);
  }
  header p {
    font:
      normal normal normal 20px/1.2em "Trend Sans W00 Four",
      sans-serif;
    color: rgb(56, 56, 56);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: clamp(16px, 4vw, 20px);
  }
  h2 {
    font:
      normal normal normal 35px/1.4em "Trend Sans W00 Four",
      sans-serif;
    color: rgb(56, 56, 56);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  p {
    font-family: "Montserrat Variable", sans-serif;
  }
  body {
    margin: 32px;
  }
</style>
